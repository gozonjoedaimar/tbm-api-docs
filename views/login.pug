extends layout

block content
  div(class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8")
    div(class="max-w-[310px] w-full")
      h2(class="text-center pb-4 border-b")
        | TBM API Docs
      h2(class="mt-4 pb-5 border-b text-center text-3xl leading-9 font-extrabold text-gray-900")
        | Login
      form(class="mt-6" method="POST")
        div(class="rounded-md shadow-sm")
          div
            label(for="username" class="text-sm")
              | Username 
            input(type="text" name="username" id="username" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-s focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" placeholder="Username")
          div(class="mt-4")
            label(for="password" class="text-sm")
              | Password
            input(type="password" name="password" id="password" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-s focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" placeholder="Password")
          div(class="mt-6 w-fit m-auto")
            // Add the reCAPTCHA widget here
            div(class="g-recaptcha" data-sitekey=process.env.RECAPTCHA_SITE)
        div(class="mt-6")
          button(type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-indigo active:bg-blue-700 transition duration-150 ease-in-out")
            span(class="absolute left-0 inset-y-0 flex items-center pl-3")
              i(class="fas fa-lock text-blue-500")
            | Sign in
